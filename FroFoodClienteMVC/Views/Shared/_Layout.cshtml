<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FroFoodClienteMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

   <header>
       <nav class="navbar navbar-expand-lg navbar-light bg-light">
           <a href="https://fontmeme.com/fontes/fonte-flower-bold/"><img src="https://fontmeme.com/permalink/201119/c424e70f7e90bb11489d633c933ad93f.png" alt="fonte-flower-bold" border="0" width="205" height="70"></a>
           <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
           </button>
           <form class="form-inline my-2 my-lg-0">
               <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
               <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
           </form>
           <div class="collapse navbar-collapse" id="navbarSupportedContent">
               <div class="form-inline input-group-sm mb-3">
                   <div class="input-group-prepend">
                       <span class="input-group-text" id="inputGroup-sizing-sm">Buscar</span>
                   </div>
                   <input type="text" class="form-control" placeholder="Endereço" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
               </div>
               <a class="navbar-brand" href="#">
                   <img src="/docs/4.0/assets/brand/bootstrap-solid.svg" width="10" height="10" class="d-inline-block align-top" alt="">
                   Bootstrap
               </a>

</nav>
   </header>

    

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - FroFoodClienteMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
