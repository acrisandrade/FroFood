@model Dominio_FroFood.ViewModels.PedidoView

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h4>Avaliar Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Item
        </dt>
        <dd class="col-sm-10">
            @(Model.Item.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurante)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pagamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pagamento)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
    </dl>
    <div>
        <form asp-action="Avaliar" method="post" class="form-control">

            <input type="hidden" name="Pedido" value="@Model.Id" />

            <div class="form-group shadow-textarea">
                <label for="exampleFormControlTextarea6">Avalie o Pedido: </label>
                <textarea class="form-control z-depth-1" name="comentario" id="exampleFormControlTextarea6" rows="3"
                          placeholder="Digite sua sugestao..."></textarea>
            </div>
            <label for="exampleFormControlTextarea6">De uma nota ao restaurante: </label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="nota" id="inlineRadio1" value="1">
                <label class="form-check-label" for="inlineRadio1">1</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="nota" id="inlineRadio2" value="2">
                <label class="form-check-label" for="inlineRadio2">2</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="nota" id="inlineRadio2" value="3">
                <label class="form-check-label" for="inlineRadio2">3</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="nota" id="inlineRadio2" value="4">
                <label class="form-check-label" for="inlineRadio2">4</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="nota" id="inlineRadio2" value="5">
                <label class="form-check-label" for="inlineRadio2">5</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>

        
    </div>
</div>

<style>
    .shadow-textarea textarea.form-control::placeholder {
        font-weight: 300;
    }

    .shadow-textarea textarea.form-control {
        padding-left: 0.8rem;
    }
</style>

