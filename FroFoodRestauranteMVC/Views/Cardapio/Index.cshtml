
@{
    ViewData["Title"] = "Index";
}

<h1>Criar Cardápio</h1>
<div class="container">
    <form asp-controller="Cardapio" asp-action="AdicionarItem" method="post" enctype="multipart/form-data">
        <div class="from-group">
            <div>
                <label class="form-label">Adicionar Imagem: </label>
                <input type="file" name="imagem" class="form-control" />
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" name="nome">
        </div>
        <div class="mb-3">
            <label class="form-label">Preço:</label>
            <input type="text" class="form-control" name="valor">
        </div>
        <div class="mb-3">
            <label class="form-label">Tamanho: </label>
            <input type="text" class="form-control" name="tamanho">
        </div>
        <div class="mb-3">
            <label class="form-label">Categoria: </label>
            <input type="text" class="form-control" name="categoria">
        </div>
        <div class="form-group shadow-textarea">
            <label>Descrição: </label>
            <textarea class="form-control z-depth-1" name="descricao" rows="3"
                      placeholder="Descrição"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Enviar" class="btn btn-primary" />
        </div>
    </form>
</div>

